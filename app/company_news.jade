doctype html
html(lang="en")
    head
        include ./com/meta
        link(rel="stylesheet" ,href="/assets/styles/news.min.css")
        title 首页
    body
        include ./com/header

        .static_banner
            img(src="./assets/image/bg_3.png")

        section.container.clearfix
            ul.left_nav.fl.box#wu-detail
                li 公司新闻

            .c_right.fr
                .c_nav
                    a 首页
                    a >
                    a 公司新闻
                    a >
                    a.nav_show 全部分类
                .c_r_content.box
                    .newsListArea
                        ul.clearfix#newsList
                        include ./com/page
                    .newsDetailArea#news_detail
        include ./com/footer
        script(type="text/javascript",src="/assets/scripts/news.js")
        script(type="text/html",id="wu-detail-tmpl").
            <li>公司新闻</li>
            <li class="active"><a href="javascript:void(0)" data-type="">全部分类<span></span></a></li>
            <!--[for(i=0;i<list.length;i++){]-->
                <li><a href="javascript:void(0)" data-type="<!--[=list[i].id || '']-->"><!--[=list[i].name || '']--><span></span></a></li>
            <!--[}]-->

        script(type="text/html",id="wu-list-tmpl").
            <!--[for(i=0;i<list.length;i++){]-->
            <li>
            <a href="javascript:void(0);" data-id="<!--[=list[i].id]-->">
            <img src="<!--[=list[i].img]-->" class="news_img">
            <div class="news_title"><!--[=list[i].name]--></div>
            <div class="news_date">发布日期 <!--[=$formatDate(list[i].created)]--></div>
            <div class="news_desc"><!--[=list[i].introduce || '暂无简介']--></div>
            </a>
            </li>
            <!--[}]-->


        script(type="text/html",id="news_detail_tmpl").
            <div class="news_title"><!--[=name]--></div>
            <div class="news_date t_c">发布日期 <!--[=$formatDate(created)]--></div>
            <div class="news_content"></div>
